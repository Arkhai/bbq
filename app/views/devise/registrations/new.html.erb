<div class="container row">
  <div class="col-xs-12 col-sm-6 col-md-5 col-lg-4">
    <h2>Регистрация</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name, 'Имя' %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Имя', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'E-mail' %><br />
        <%= f.email_field :email, placeholder: 'E-mail', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password,'Пароль' %>
        <% if @minimum_password_length %>
          <em>(Не менее <%= @minimum_password_length %> символов)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Пароль', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'Подтверждение пароля' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Подтверждение пароля', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit 'Готово', class: 'btn btn-info btn-block' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
